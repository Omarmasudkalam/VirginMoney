        android:id="@+id/nav_people"
        android:name="com.omk.ict.virginmoney.ui.People.PeopleFragment"
        android:label="fragment_people"
        tools:layout="@layout/fragment_people" >
        <action
            android:id="@+id/action_peopleFragment_to_detailsFragment"
            app:destination="@id/nav_details" />
    </fragment>
    <fragment
        android:id="@+id/nav_room"
        android:name="com.omk.ict.virginmoney.ui.Room.RoomFragment"
        android:label="fragment_room"
        tools:layout="@layout/fragment_room" />
    <fragment
